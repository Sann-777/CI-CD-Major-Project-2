# StudyNotion Environment Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGO_USERNAME=your-mongo-username
MONGO_PASSWORD=your-mongo-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
COOKIE_EXPIRE=7

# Email Configuration (Gmail SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_APP_NAME=StudyNotion
VITE_NODE_ENV=development

# Service URLs (Local Development)
FRONTEND_URL=http://localhost:3008
AUTH_SERVICE_URL=http://localhost:3001
COURSE_SERVICE_URL=http://localhost:3003
PROFILE_SERVICE_URL=http://localhost:3004
RATING_SERVICE_URL=http://localhost:3005
MEDIA_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007

# Database URLs (Local Development)
MONGODB_URI_AUTH=mongodb://localhost:27017/studynotion-auth
MONGODB_URI_COURSE=mongodb://localhost:27017/studynotion-courses
MONGODB_URI_PROFILE=mongodb://localhost:27017/studynotion-profiles
MONGODB_URI_RATING=mongodb://localhost:27017/studynotion-ratings
MONGODB_URI_MEDIA=mongodb://localhost:27017/studynotion-media
MONGODB_URI_NOTIFICATION=mongodb://localhost:27017/studynotion-notifications
