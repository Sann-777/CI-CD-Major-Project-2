{
  "name": "studynotion-api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for StudyNotion microservices",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testPathPattern=tests/",
    "test:watch": "jest --watch --testPathPattern=tests/",
    "test:coverage": "jest --coverage --testPathPattern=tests/",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "echo 'No build needed for API Gateway'",
    "health": "node healthcheck.js"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.15.0",
    "helmet": "^6.1.5",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "api-gateway",
    "microservice",
    "studynotion"
  ],
  "author": "StudyNotion Team",
  "license": "MIT"
}
