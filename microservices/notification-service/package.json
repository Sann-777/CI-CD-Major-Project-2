{
  "name": "studynotion-notification-service",
  "version": "1.0.0",
  "description": "Notification microservice for StudyNotion platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testPathPattern=tests/",
    "test:watch": "jest --watch --testPathPattern=tests/",
    "test:coverage": "jest --coverage --testPathPattern=tests/",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "echo 'No build needed for Notification Service'",
    "health": "node healthcheck.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.3",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "helmet": "^6.1.5",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.15.0",
    "nodemailer": "^6.9.1",
    "jsonwebtoken": "^9.0.0",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.57.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.0.0"
  },
  "keywords": ["notification", "contact", "microservice", "studynotion"],
  "author": "StudyNotion Team",
  "license": "MIT"
}
